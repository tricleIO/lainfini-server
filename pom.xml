    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
    </properties>

    <build>
        <finalName>${build.profile.id}##${version}</finalName>
        <filters>
            <filter>src/main/filters/${build.profile.id}.properties</filter>
        </filters>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

    <repositories>
        <repository>
            <id>spring-releases</id>
            <url>https://repo.spring.io/libs-release</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>spring-releases</id>
            <url>https://repo.spring.io/libs-release</url>
        </pluginRepository>
    </pluginRepositories>


    <profiles>
        <profile>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <id>empty</id>
            <properties>
                <finalname>_dev</finalname>
                <build.profile.id>empty</build.profile.id>
            </properties>
        </profile>
        <profile>
            <id>filip</id>
            <properties>
                <finalname>_dev</finalname>
                <build.profile.id>filip</build.profile.id>
            </properties>
        </profile>
        <profile>
            <id>merta</id>
            <properties>
                <finalname>_dev</finalname>
                <build.profile.id>merta</build.profile.id>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <finalname>_prod</finalname>
                <build.profile.id>production</build.profile.id>
            </properties>
        </profile>
        <profile>
            <id>stage</id>
            <properties>
                <finalname>_stg</finalname>
                <build.profile.id>stage</build.profile.id>
            </properties>
        </profile>
        <profile>
            <id>testing</id>
            <properties>
                <finalname>_tst</finalname>
                <build.profile.id>testing</build.profile.id>
            </properties>
        </profile>
    </profiles>
</project>